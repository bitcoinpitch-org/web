    // Fetch category-specific language usage
    async function fetchCategoryLanguageUsage() {
        try {
            const response = await fetch('/api/languages/usage');
            if (response.ok) {
                const globalUsage = await response.json();
                categoryLanguageUsage = globalUsage;
